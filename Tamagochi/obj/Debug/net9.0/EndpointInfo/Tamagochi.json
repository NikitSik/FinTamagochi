            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Tamagochi": {
        "required": [
          "developer",
          "title"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "developer": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
